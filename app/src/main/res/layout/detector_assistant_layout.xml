<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/black"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:layout_width="match_parent"
    tools:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/detector_show_button"
        android:layout_width="35dp"
        android:layout_height="75dp"
        android:minWidth="35dp"
        android:minHeight="75dp"
        android:background="@drawable/sheet_arrow_background_shape"
        android:layout_gravity="end|center"
        android:alpha="0.7"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            >

            <ImageView
                android:id="@+id/detector_close"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_close_gray"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:visibility="visible"
                tools:visibility="visible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/detector_capture"
                />

            <ImageView
                android:id="@+id/detector_camera"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_outline_camera_alt_24"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                tools:visibility="visible"/>
<!--                app:layout_constraintTop_toBottomOf="@id/detector_close"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintBottom_toTopOf="@id/detector_capture"-->
<!--                />-->

            <ImageView
                android:id="@+id/detector_capture"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_center_focus_strong_24"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:visibility="visible"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/detector_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <ImageView
                android:id="@+id/detector_open_app"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/open_app_icon"
                android:padding="2dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                tools:visibility="visible"/>
<!--                app:layout_constraintTop_toBottomOf="@id/detector_capture"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintBottom_toTopOf="@id/detector_draw"-->
<!--                />-->

            <ImageView
                android:id="@+id/detector_draw"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_baseline_gesture_24"
                android:padding="2dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                tools:visibility="visible"/>
<!--                app:layout_constraintTop_toBottomOf="@id/detector_open_app"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintBottom_toBottomOf="parent"-->
<!--                />-->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>


</FrameLayout>

