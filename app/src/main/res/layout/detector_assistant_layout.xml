<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/detector_show_button"
        android:layout_width="15dp"
        android:layout_height="50dp"
        android:background="@drawable/sheet_arrow_background_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/sheet_arrow"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="end|center"
            android:src="@drawable/ic_baseline_arrow_back_24"
            />

        <Button
            android:id="@+id/notifiсation_point"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="top|start"
            android:background="@drawable/red_circle_shape_filled"/>

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detector_buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/detector_show_button"
        android:visibility="gone"
        tools:visibility="visible"
        >

        <ImageButton
            android:id="@+id/detector_close_button"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/blue_circle_shape_filled"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            />

        <ImageButton
            android:id="@+id/detector_share_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/detector_close_button"
            android:background="@drawable/blue_circle_shape_filled"
            android:src="@drawable/ic_baseline_share_24"
            android:layout_marginEnd="4dp"/>



        <ImageButton
            android:id="@+id/detector_gallery_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/detector_share_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/detector_share_button"
            android:background="@drawable/blue_circle_shape_filled"
            android:src="@drawable/ic_baseline_grid_view_24"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="8dp"
            />

        <ImageButton
            android:id="@+id/detector_camera_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/detector_gallery_button"
            app:layout_constraintStart_toStartOf="@id/detector_gallery_button"
            android:background="@drawable/blue_circle_shape_filled"
            android:src="@drawable/ic_baseline_photo_camera_24"
            android:layout_marginTop="4dp"
            android:layout_marginStart="18dp"
            />

        <ImageButton
            android:id="@+id/detector_favorite_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="@id/detector_camera_button"
            app:layout_constraintStart_toEndOf="@id/detector_camera_button"
            android:background="@drawable/blue_circle_shape_filled"
            android:src="@drawable/ic_baseline_favorite_24"
            android:layout_marginTop="14dp"
            android:layout_marginStart="4dp"
            />

        <ImageButton
            android:id="@+id/detector_settings_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@id/detector_favorite_button"
            app:layout_constraintStart_toEndOf="@id/detector_favorite_button"
            android:background="@drawable/blue_circle_shape_filled"
            android:src="@drawable/ic_baseline_settings_24"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="4dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

