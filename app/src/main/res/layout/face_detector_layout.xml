<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/sheet_button"
        android:layout_width="25dp"
        android:layout_height="55dp"
        android:background="@drawable/sheet_arrow_background_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/sheet_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_arrow_back_24"
            />

        <Button
            android:id="@+id/notifiaction_point"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="top|start"
            android:background="@drawable/red_circle_shape"/>

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/assistant_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toStartOf="@id/sheet_button"
        >

        <ImageButton
            android:id="@+id/icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:src="@drawable/assistant_icon_removebg_preview"
            android:scaleType="fitCenter"
            android:background="#00000000"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/face_detector_recycler_view"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@id/icon"
            app:layout_constraintEnd_toStartOf="@id/icon"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>